generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model List {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  mal_id Int @unique
  title String
  image String
  favorite Boolean
  watched Boolean
  see_later Boolean
}